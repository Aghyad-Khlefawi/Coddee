<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HR.Clients.Components.MainPage"
             x:Name="Root"
             Title="Companies">
    <ContentPage.Content>
        <ListView ItemsSource="{Binding Companies}"
                  SelectedItem="{Binding Companies.SelectedItem,Mode=TwoWay}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell  Command="{Binding Source={Reference Root},Path=BindingContext.SelectCompanyCommand}" 
                               CommandParameter="{Binding}"
                               Text="{Binding Name}"
                               TextColor="Black"
                               Detail="{Binding Detail}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</ContentPage>
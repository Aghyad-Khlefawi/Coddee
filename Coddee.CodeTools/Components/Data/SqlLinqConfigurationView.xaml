                                <TextBox Width="100" Text="{Binding DefaultNamespace}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                                <Label Content="Folder"/>
                                <TextBox Width="80" Text="{Binding Folder}"/>
                            </StackPanel>

<ResourceDictionary
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Coddee.CodeTools"
             mc:Ignorable="d" >
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/Coddee.WPF;component/Resources.xaml" />
    </ResourceDictionary.MergedDictionaries>
    <Style TargetType="TextBox">
        <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>

    <SolidColorBrush x:Key="ApplicationAccentColorLighter"
                     Color="#444F5A" />
    <SolidColorBrush x:Key="ApplicationAccentColor"
                     Color="#283645" />
    <SolidColorBrush x:Key="ApplicationAccentColorDarker"
                     Color="#151824" />
</ResourceDictionary>

<UserControl x:Class="Coddee.Services.Dialogs.MessageDialogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Coddee.Services.Dialogs"
             xmlns:wpf="clr-namespace:Coddee.WPF"
             mc:Ignorable="d" d:DesignWidth="300">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../Resources.xaml" />
                <ResourceDictionary>
                    <local:MessageDialog x:Key="designData" />
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid d:DataContext="{StaticResource designData}">
        <DockPanel 
                   MinWidth="400">
                <Button Content="{wpf:Localize OK}"
                        DockPanel.Dock="Bottom"
                        HorizontalContentAlignment="Center"
                        HorizontalAlignment="Right"
                        Command="{Binding OkCommand}"
                        Style="{StaticResource DialogButton}"/>
            <TextBlock TextWrapping="Wrap"
                       TextAlignment="Left"
                       Margin="50 0 50 10"
                       VerticalAlignment="Center"
                       FontSize="16"
                       DockPanel.Dock="Top"
                       Text="{Binding Message}"/>
            </DockPanel>
    </Grid>
</UserControl>

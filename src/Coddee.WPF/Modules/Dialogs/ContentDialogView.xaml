<UserControl x:Class="Coddee.WPF.Modules.Dialogs.ContentDialogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Coddee.WPF.Modules.Dialogs"
             xmlns:global="clr-namespace:"
             xmlns:coddee="http://schemas.Coddee.com/2017/WPF"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <local:ContentDialogViewModel x:Key="designData" />
    </UserControl.Resources>
    <Grid d:DataContext="{StaticResource designData}">
        <ContentPresenter Content="{Binding Content}"/>
    </Grid>
</UserControl>
